---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container">
  <div class="header">
    <h2>{title}</h2>
    <p></p>
    <a href="/">
      <p>トップ</p>
    </a>
    <a href="/garden/">
      <p>庭園</p>
    </a>
    <a href="/rooms/">
      <p>居室</p>
    </a>
    <a href="/facilities/">
      <p>設備</p>
    </a>
    <a href="/around/">
      <p>周辺</p>
    </a>
  </div>
</div>

<style>
  .container {
    display: grid;
    grid-template-columns: minmax(32px, 1fr) minmax(auto, 1120px) minmax(
        32px,
        1fr
      );
  }

  .header {
    grid-column: 2 / -2;
    display: grid;
    grid-template-columns: auto 1fr;
    grid-auto-flow: column;
    align-items: start;
    gap: 20px;

    @media (max-width: 496px) {
      grid-template-columns: auto 0px 1fr;
    }
  }

  a {
    text-decoration: none;
  }

  h2 {
    margin-top: 0px;
  }

  p {
    writing-mode: vertical-lr;
    margin: 1px;
    color: rgb(27, 25, 25);
  }
</style>
