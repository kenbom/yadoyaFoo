---
import DrawerHeader from '../components/Drawer-header.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="container">
  <div class="header">
    <h2>{title}</h2>
    <p></p>
    <a href="/">
      <p>トップ</p>
    </a>
    <a href="/about/">
      <p>ふうのご紹介</p>
    </a>
    <a href="/around/">
      <p>近場のお楽しみ</p>
    </a>
    <a href="/littleFar/">
      <p>足をのばせば</p>
    </a>
    <div class="navi">
    <!-- <DrawerHeader /> -->
    </div>
      <div></div>
  </div>
</div>

<style>
  .container {
    display: grid;
    grid-template-columns: minmax(20px, 1fr) minmax(auto, 1120px) minmax(
        32px,
        1fr
      );
  }

  .header {
    grid-column: 2 / -2;
    display: grid;
    grid-template-columns: auto 1fr;
    grid-auto-flow: column;
    align-items: start;
    gap: 10px;

    @media (max-width: 496px) {
      grid-template-columns: auto 0px 1fr;
    }
  }

  a {
    text-decoration: none;
    @media (max-width: 496px) {
      display: none;
    }
  }

  h2 {
    margin-top: 0px;
    font-size: 2rem;
    font-weight: bold;
    @media (max-width: 496px) {
      font-size: 1.5rem;
    }
  }

  p {
    margin: 1px;
    color: rgb(27, 25, 25);
  }

  .navi {
    display: none;
    @media (max-width: 496px) {
      display: flex;
      justify-self: end;
    }
  }
</style>
