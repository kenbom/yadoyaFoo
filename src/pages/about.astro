---
import Layout from '../layouts/Layout.astro';
import PictRooms from '../components/PictRooms.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/about/housegate.jpg';

import '@fontsource/shippori-mincho';
import PrictFacilities from '../components/PrictFacilities.astro';
---

<Layout title="ふうのご紹介">
  <hero class="page-subs">
    <Image class="photo-hero" src={image1} alt={`ふうのご紹介`} quality="mid" />
    <PictRooms />
    <PrictFacilities />
  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(18px, 1fr) minmax(auto, 1120px) minmax(
          18px,
          1fr
        );
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      > * {
        grid-column: 2 / -2;
      }

      > .photo-hero {
        grid-row: 1 / 2;
        width: 100%;
        height: 600px;
        object-fit: cover;
      }
    }
  </style>
</Layout>
