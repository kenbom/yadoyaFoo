---
import Layout from '../layouts/Layout.astro';
import CardSub from '../components/Card-sub.astro';
import { Image } from 'astro:assets';
import CardCarouselSvelte from '../components/CardCarouselSvelte.svelte';
import image2 from '../assets/around/tobira2.jpg';
import image3 from '../assets/around/umi.jpg';
import image4 from '../assets/around/odawara-joe.jpg';
import image6 from '../assets/around/kagosei.jpg';
import slide1 from '../assets/around/shop.jpg';
import slide2 from '../assets/around/coffeeshop.jpg';
import slide3 from '../assets/around/urokoki.jpg';
import slide4 from '../assets/around/nerimono.webp';
import slide5 from '../assets/around/jinenjokanban.webp';
import slide6 from '../assets/around/jinenjo.webp';

import '@fontsource/shippori-mincho';
const slidesObjs = [
  {
    slide: slide4,
    alt: 'ねりもの',
  },
  {
    slide: slide5,
    alt: 'かんばん',
  },
  {
    slide: slide6,
    alt: 'じねんじょ棒',
  },
  {
    slide: slide3,
    alt: '鱗吉さん',
  },
  {
    slide: slide1,
    alt: 'Leoさん',
  },
  {
    slide: slide2,
    alt: 'カフェ',
  },
];
---

<Layout title="近場のお楽しみ">
  <hero class="page-subs">
    <Image class="photo-hero" src={image6} alt={`籠清さん`} quality="mid" />
    <CardSub
      title="海への扉"
      body="宿を出て右へ折れれば「海への扉」。Netflixドラマ”忍者の家”でも登場した幻想的な景色が現われます"
      image={image2}
    />
    <CardSub
      title="御幸の浜から"
      body="徒歩2分の御幸の浜から相模湾を望みます。深い湾ならではのエメラルドグリーンが晴れた日にはまぶしい"
      image={image3}
    />
    <CardSub
      title="小田原城址公園"
      body="小田原城もいいんです。でも本当に見てほしいのは丹念に世話をされた季節の花々、そして美しく配置された城壁とお掘なんです"
      image={image4}
    />
    <div class="carousel">
      <CardCarouselSvelte
        client:load
        title="カフェも老舗も"
        body="ページトップのかまぼこ籠清さん、創業1814年。レトロなお店はパンとお菓子のLeoさん、創業2024年。こんな素敵な街がご近所さんです"
        {slidesObjs}
      />
    </div>
  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(18px, 1fr) minmax(auto, 1120px) minmax(
          18px,
          1fr
        );
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      > * {
        grid-column: 2 / -2;
      }

      .carousel {
        grid-column: 2 / -2;
      }

      > .photo-hero {
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
    }
  </style>
</Layout>
