---
import Layout from '../layouts/Layout.astro';
import CardSub from '../components/Card-sub.astro';
import { Image } from 'astro:assets';
import image1 from '../assets/around/dogrun.png';
import image2 from '../assets/around/tobira2.png';
import image3 from '../assets/around/umi.jpg';
import image4 from '../assets/around/odawara-joe.png';
import image5 from '../assets/around/shop.png';
import image6 from '../assets/around/kagosei.jpg';

import '@fontsource/shippori-mincho';
---

<Layout title="近場のお楽しみ">
  <hero class="page-subs">
    <Image class="photo-hero" src={image6} alt={`籠清さん`} quality="mid" />
    <!-- <CardSub
      title="ドッグラン 犬と海辺"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image1}
    /> -->
    <CardSub
      title="海への扉"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image2}
    />
    <CardSub
      title="御幸の浜から"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image3}
    />
    <CardSub
      title="小田原城址公園"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image4}
    />
    <CardSub
      title="カフェも老舗も"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image5}
    />
  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(18px, 1fr) minmax(auto, 1120px) minmax(
          18px,
          1fr
        );
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      > * {
        grid-column: 2 / -2;
      }

      > .photo-hero {
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
    }
  </style>
</Layout>
