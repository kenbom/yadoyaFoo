---
import Layout from '../layouts/Layout.astro';
import CardSub from '../components/Card-sub.astro';
import { Image } from 'astro:assets';
import image0 from '../assets/no-image.png';
import image2 from '../assets/littleFar/ishigakiyama.png';
import image6 from '../assets/littleFar/minaka.png';

import '@fontsource/shippori-mincho';
---

<Layout title="足をのばせば">
  <hero class="page-subs">
    <Image class="photo-hero" src={image6} alt={`ミナカ小田原`} quality="mid" />
    <CardSub
      title="小田原駅"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image0}
    />
    <CardSub
      title="小田原漁港"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image0}
    />
    <CardSub
      title="石垣山"
      body="Lorem ipsum dolor sit amet, consectetur adipisci elit, sed eiusmod tempor incidunt ut labore et dolore magna aliqua. "
      image={image2}
    />
  </hero>

  <style>
    .page-subs {
      display: grid;
      grid-template-columns: minmax(18px, 1fr) minmax(auto, 1120px) minmax(
          18px,
          1fr
        );
      row-gap: 20px;
      font-family: 'Shippori Mincho';

      > * {
        grid-column: 2 / -2;
      }

      > .photo-hero {
        grid-row: 1 / 2;
        width: 100%;
        height: 500px;
        object-fit: cover;
      }
    }
  </style>
</Layout>
